/**app.wxss**/

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

.handle {
    display: inline-block;
    margin: 20rpx 0;
    margin-left: 10rpx;
    width: 174rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    border-radius: 4rpx;
}

.handle-box {
    text-align: right;
    font-size: 28rpx;
}

.delete {
    color: #aaa;
    border: 1rpx solid #aaa;
}

.refund {
    color: #f4bd41;
    border: 1rpx solid #f4bd41;
}

.appraise {
    color: #ff6816;
    border: 1rpx solid #ff6816;
}

.payButton {
	position: fixed;
	bottom: 0;
	width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background: rgba(77, 170, 51, 1);
	color: #fff;
	font-size: 36rpx;
	text-align: center;
}
.payButton text {
	font-weight: bold;
}

.hidden {
	display: none;
}