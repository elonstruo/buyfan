/* pages/address/address.wxss */
@import "../takeOut/takeOut.wxss";

.none-title {
    margin-top: 37rpx;
    color: #aaa;
}

.img-order {
    width: 240rpx;
    height: 240rpx;
}

.take-order {
    width: 240rpx;
    height: 72rpx;
    /* background: rgba(251, 134, 30, 1); */
    background: #fff;
    border-radius: 10rpx;
}

.take-order-hover {
    background: rgba(255, 104, 22, 1);
    color: #fff;
}

.icon-edti {
    width: 40rpx;
    height: 40rpx;
}

.toAddress {
	/* min-height: 100vh; */
    padding: 0 30rpx;
	padding-bottom: 180rpx;
}

.toAddress .item {
    padding: 30rpx 0;
    border-bottom: 1rpx solid #dcdcdc;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.toAddress .item .left {
	flex: 9
}
.toAddress .item .right {
	flex: 1;
	display: flex;
	justify-content: flex-end
}
.toAddress .item:last-child {
    border-bottom: none;
}

.address-title {
    margin-bottom: 24rpx;
    font-size: 24rpx;
    color: #323232;
}

.name {
    margin-right: 40rpx;
    font-size: 30rpx;
    color: #323232;
    font-weight: bold;
}

.number {
    font-size: 30rpx;
    color: #323232;
}

.address-info {
    display: flex;
}

.addressButton {
	/* position: fixed; */
	/* bottom: 0rpx; */
    width: 640rpx;
	/* width: 100%; */
    height: 90rpx;
    line-height: 80rpx;
	/* left: 50%; */
	/* margin: 10rpx auto; */
	/* margin-left: -320rpx; */
	color: #fff;
	text-align: center;
    background: rgba(251, 135, 60, 1);
    border-radius: 50rpx;
	font-size: 30rpx; 
	margin: 0 auto;
}