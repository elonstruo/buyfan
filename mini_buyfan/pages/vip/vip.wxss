/* pages/vip/vip.wxss */

page {
    background-color: #efefef;
}

.vip-card {
    margin-bottom: 20rpx;
    padding-bottom: 30rpx;
    text-align: center;
    background: #fff;
}

.img-vip {
    display: block;
    width: 670rpx;
    height: 400rpx;
    margin: 0 auto;
}

.open-vip {
    margin: 0 auto;
    margin-top: 13rpx;
    margin-bottom: 30rpx;
    width: 600rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: rgba(251, 135, 61, 1);
    color: #fff;
    font-size: 30rpx;
    border-radius: 40rpx;
    text-align: center;
}

.vipno-title {
    font-size: 30rpx;
    color: #323232;
}

.top-up {
	margin-bottom: 20rpx;
    background-color: #fff;
}

.top-up .title {
    padding-left: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: #323232;
    font-size: 30rpx;
    font-weight: bold;
}

.top-up .items {
    display: flex;
    color: #323232;
    font-size: 28rpx;
}

.top-up .item {
	padding-top: 32rpx;
	padding-bottom: 32rpx;
	line-height: 44rpx;
    flex: 1;
    text-align: center;
    box-sizing: border-box;
	border-top: 1rpx solid #DCDCDC;
}
.top-up .item:first-child {
	border-right: 1rpx solid  #DCDCDC
}
.rights .item:first-child {
	border-right: none
}
.rights .item:nth-of-type(2) {
	border-left: 1rpx solid  #DCDCDC;
	border-right: 1rpx solid  #DCDCDC
}
.top-up text {
	font-weight: bold;
}
.button-topup {
	margin: 0 auto;
	margin-top: 28rpx;
    width: 227rpx;
    height: 60rpx;
    line-height: 60rpx;
	text-align: center;
    border: 1rpx solid rgba(251, 135, 61, 1);
	color: #FB873D;
	font-size: 28rpx;
	border-radius: 50rpx;
}
.button-topup-hover {
	background-color: rgba(251, 135, 61, 1);
	color: #fff;
}
.icon-rights {
	margin-bottom: 20rpx;
	width: 72rpx;
	height: 72rpx;
}
.rights {
	margin-bottom: 60rpx;
}
.vipyes {
	padding-top: 20rpx;
	padding-bottom: 0;
}