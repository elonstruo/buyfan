<!--pages/menu/menu.wxml-->
<!-- 顶部商店详情 -->
<view class='sign'>
    <view class='left'>
        <!-- <view class='image-box'> -->
        <!-- <image class='logo' src='../../images/logo@2x.png'></image> -->
        <image class='logo' mode="aspectFill" src='{{appLogo}}'></image>
        <!-- </view> -->
        <view class='sign-info'>
            <view class='sign-ln'>
                <view class='name'>{{stores.shopName}}</view>|
                <view class='km'>{{distance}}km</view>|
                <view class='time'>19分钟</view>
            </view>
            <view class='mimo'>公告：{{stores.shopIntro}}</view>
            <view class=''>近期售出1323份</view>
        </view>
    </view>
    <view class='right'>
        <view class='changeshop' bindtap='changeshop'>
            <view class='image-box'>
                <image class='icon-change' src='../../images/switch_white@2x.png'></image>
            </view>
            <view class='change-text'>切换分店</view>
        </view>
    </view>
</view>
<!-- 点餐评价商家tabbar -->
<view class='tabbar'>
    <view data-id="1" bindtap='tabClick' class='title {{selectedId == 1 ? "on" :"" }}'>
        <text class='text'>点餐</text>
    </view>
    <view data-id="2" bindtap='tabClick' class='title {{selectedId == 2 ? "on" :"" }}'>
        <text class='text'>评价</text>
    </view>
    <view data-id="3" bindtap='tabClick' class='title {{selectedId == 3 ? "on" :"" }}'>
        <text class='text'>商家</text>
    </view>
</view>
<!-- 点餐评价商家tabbar-details -->
<view class='tabbarDetails'>
    <!-- 点餐tabbar-details -->
    <view class='tabitem' wx:if="{{selectedId == 1}}">
        <!-- sidebar点餐分类 -->
        <scroll-view scroll-y="true" style='height: {{mesuScrollHeight}}px' class='category'>
            <view wx:key="unique" wx:for-items="{{type_sort}}" wx:key="index" class='type-box'>
                <view data-goodsclass="{{item}}" data-id="{{index}}" class="classes {{activeCategoryId == index ? 'on' : ''}}" bindtap='categoryClick'>
                    <text>{{item}}</text>
                </view>
            </view>
        </scroll-view>
        <!-- 商品列表 -->
		<scroll-view scroll-y="true" style='height: {{mesuScrollHeight}}px' class='items'>
			<!-- <view class='tag'>热销</view> -->
			<view class='item' data-goodsclass="{{item.goodsclass}}" wx:if="{{item.goodsclass == categoryGoodsclass}}" hover-class='on' wx:key="unique" wx:for="{{goods}}">
				<view class='img-shop'>
					<image mode='aspectFill' class='img-shop' src='{{item.goodsImage}}'></image>
				</view>
				<view class='info-shop'>
					<view class='name'>{{item.goodsName}}</view>
					<view class='description'>{{item.goodsIntro}}</view>
					<view class='sale'>月售{{item.goodsSell}}</view>
					<view class='price'>¥{{item.sPrice}}</view>
				</view>
				<!-- 没有规格加减 -->
				<view class="cart-count-box" wx:if="{{item.goodsSpec.length < 1 ||!item.goodsSpec}}">
					<text class="cart-count-wrap cart-count-down" bindtap="minusCount" data-food-id="{{item.gid}}" wx:if="{{cartData[item.gid]}}">-</text>
					<text class="cart-count-num">{{cartData[item.gid]}}</text>
					<text class="cart-count-wrap cart-count-add" bindtap="addCount" data-goods-spec="{{item.goodsSpec}}" data-food-id="{{item.gid}}">+</text>
				</view>
				<!-- 选规格 -->
				<view class='choose' bindtap="chooseMoal" data-food-id="{{item.gid}}" wx:if="{{item.goodsSpec.length>=1}}">
					<view class='choose-num' wx:if="{{cartData[item.gid]}}">{{cartData[item.gid]}}</view>
						<view>选规格</view>
				</view>
			</view>
		</scroll-view>
        <!-- 购物车工具栏 -->
        <view class='carts-bar'>
            <view class='left' bindtap='cascadeToggle'>
                <view class='car'>
                    <image class='icon-car' src='../../images/run@2x.png'></image>
                    <text class='carts-num' wx:if="{{num}}">{{num}}</text>
                </view>
                <view class='all-price' wx:if="{{amount}}">¥{{amount}}</view>
            </view>
            <button disabled='{{cartObjects.length<1}}' class='addall' bindtap='toTakeOut'>去结算</button>
        </view>
        <!-- 规格详情 -->
        <view class='modal' wx:if="{{isModal}}" wx:key="unique" wx:for="{{chooseObjects}}">
			<view class="modal-mask toast-mask"></view>
            <view class='toast'>
                <view class='toast-wrapper'>
                    <view class='toast-body'>
                        <view class='toast-title'>{{item.cartFood.goodsName}}</view>
                        <view class='choose-box'>
                            <view class='choose-list' wx:key='index' data-food-id="{{item.cartFood.gtd}}" data-goodsSpec-index="{{index}}" bindtap='chooseList0'>
                                <view class='item-title'>{{item.cartFood.goodsSpec[0].name}}</view>
                                <view data-item-index="{{index}}" data-item-name="{{item.name}}" bindtap="choosesty0" wx:key="unique" wx:for="{{item.cartFood.goodsSpec[0].detail}}" class='choosesty {{index==itemIndex0?"on":""}}'>{{item.name}}</view>
                            </view>
                            <view wx:if="{{item.cartFood.goodsSpec[1]}}" class='choose-list' wx:key='index' data-goodsSpec-index="{{index}}" bindtap='chooseList1'>
                                <view class='item-title'>{{item.cartFood.goodsSpec[1].name}}</view>
                                <view data-item-index="{{index}}" data-item-name="{{item.name}}" bindtap="choosesty1" wx:key="unique" wx:for="{{item.cartFood.goodsSpec[1].detail}}" class='choosesty {{index==itemIndex1?"on":""}}'>{{item.name}}</view>
                            </view>
                        </view>
                        <view class='toast-footer'>
                            <view class='left'>
                                <view data-food-id="{{chooseFoodId}}" class='price'>¥ {{item.cartFood.sPrice}}</view>
                                <view wx:key="unique" wx:for="{{choosestyItems}}" class='choose-text'>（
									<text wx:key="unique" wx:for="{{item.detail}}">{{item}}</text>
								）</view>
                            </view>
                            <view class="cart-count-box">
                                <text class="cart-count-wrap cart-count-down" bindtap="minusCount" data-food-id="{{chooseFoodId}}" data-goods-spec="{{item.cartFood.goodsSpec}}" wx:if="{{cartData[chooseFoodId]}}">-</text>
                                <text data-food-id="{{chooseFoodId}}" class="cart-count-num">{{cartData[chooseFoodId]}}</text>
                                <text class="cart-count-wrap cart-count-add" bindtap="addCount" data-goods-spec="{{item.cartFood.goodsSpec}}" data-food-id="{{chooseFoodId}}">+</text>
                            </view>
                        </view>
                    </view>
                    <view class='toast-close' bindtap='toastClode'>
                        <image class='icon-close' src='../../images/icon-close.png'></image>
                    </view>
                </view>
            </view>
        </view>
        <!-- 购物车 -->
        <view class='modal'>
            <view animation="{{animationMask}}" class="modal-mask {{maskVisual}}" bindtap="cascadeDismiss"></view>
            <view animation="{{animationData}}" class="modal-content carts-list"  style="height: {{cartHeight}}px; bottom: -{{cartHeight}}px;">
                <view class='top' bindtap='deleteCart'>
                    <image class='icon-trash' src='../../images/icon-trash.png'></image>
                    清空购物车
                </view>
                <scroll-view class="modal-body" scroll-y="true" style="height: {{scrollHeight}}px;">
                    <view class="item" wx:key="unique" wx:for="{{cartObjects}}">
                        <view class="title">{{item.cartFood.goodsName}}
							<text class='detail'wx:key="unique" wx:for="{{item.goodsSpecDetail}}">（{{item.detail}}）</text>
						</view>
                        <view class="fee">¥{{item.cartFood.sPrice * item.num}}</view>
                        <view class="cart-count-box">
                            <!-- 减号 -->
                            <text class="cart-count-wrap cart-count-down" data-index="{{index}}" bindtap="cartMinus" data-food-id="{{item.cartFood.gid}}" wx:if="{{item.num}}">-</text>
                            <!-- 数量 -->
                            <text class="cart-count-num">{{item.num}}</text>
                            <!-- 加号 -->
                            <text class="cart-count-wrap cart-count-add" data-index="{{index}}" bindtap="cartAdd" data-food-id="{{item.cartFood.gid}}" data-chooseObjects="{{chooseObjects}}" data-goods-spec="{{item.goodsSpec}}">+</text>
                        </view>
                    </view>
                </scroll-view>
            </view>
        </view>
    </view>
    <!-- 评价tabbar-details -->
    <view class='tabitem' wx:if="{{selectedId == 2}}">
        <view class='appraises'>
            <view class='appraises-titles'>
                <view data-id='1' bindtap='appraisesClick' class='appraises-title {{selectA == 1 ? "on":""}}'>最新</view>
                <view class='line'>|</view>
                <view data-id='2' bindtap='appraisesClick' class='appraises-title {{selectA == 2 ? "on":""}}'>最热</view>
            </view>
            <view class='appraisesTabDetails'>
                <view class='item'>
                    <image class='header' src='../../images/shopimg.jpg'></image>
                    <view class='right'>
                        <view class='top'>
                            <view class='name'>天下最弱</view>
                            <view class='time'>17小时前</view>
                        </view>
                        <view class='content'>告辞</view>
                        <view class='appraises-imgList'>
                            <block wx:key="unique" wx:for="{{appraisesImgList}}">
                                <image mode="aspectFill" src="{{item}}"></image>
                            </block>
                        </view>
                        <view bindtap='likeClick' class='like'>
                            <image class='icon-like' src='../../images/icon-like.png'></image>
                            <view class='like-text'>{{likeNum}}人点赞</view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <!-- 商家tabbar-details -->
    <view class='tabitem' wx:if="{{selectedId == 3}}">
        <view class='stores'>
            <view class='item' wx:key="unique" wx:for="{{storesData}}" data-id="{{item.id}}">
                <view class='title'>
                    <text></text>{{item.shopName}}</view>
                <view class='stores-info'>
                    <image class='icon-stores' src='../../images/location@2x.png'></image>
                    <view>{{item.shopAdr}}</view>
                </view>
                <view class='stores-info'>
                    <image class='icon-stores' src='../../images/call@2x.png'></image>
                    <view wx:key="unique" wx:for="{{item.shopTel}}">{{item}}</view>
                </view>
                <view class='stores-img'>
                    <view class="page-section-spacing">
                        <scroll-view class="scroll-view_H" scroll-x="true" bindscroll="scroll" style="width: 100%">
                            <view wx:key="unique" wx:for="{{item.shopImg}}" data-length="{{item.shopImg.length}}" class='scroll-view-item_H {{item.shopImg.length == 1 ? "on" :"" }}'>
                                <image class='store-img' mode="aspectFill" bindtap='previewImage' src='{{item}}'></image>
                            </view>
                        </scroll-view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>