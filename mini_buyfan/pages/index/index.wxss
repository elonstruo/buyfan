swiper image {
    max-width: 100%;
    width: 100%;
    height: 354rpx;
}

swiper {
    height: 354rpx;
}

swiper-item {
    text-align: center;
}

.swiper-container {
    position: relative;
    margin: 0 10rpx;
}

.swiper-container .dots {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 14rpx;
    display: flex;
    justify-content: center;
}

.swiper-container .dots .dot {
    margin: 0 14rpx;
    width: 16rpx;
    height: 16rpx;
    background: #fff;
    border-radius: 50rpx;
    transition: all 0.6s;
}

.swiper-container .dots .dot.active {
    background-color: #000;
}

