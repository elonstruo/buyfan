<view class="swiper-container">
    <swiper class="swiper_box" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" bindchange="swiperchange">
        <block wx:for="{{bannerUrls}}">
            <swiper-item>
                <image wx:if="{{item}}" src="{{item}}" bindtap="tapBanner" class="slide-image" width="100%" height="300rpx" />
            </swiper-item>
        </block>
    </swiper>
    <view class="dots">
        <block wx:for="{{bannerUrls}}" wx:key="unique">
            <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
        </block>
    </view>
</view>
<view class='clm-top'>
    <view class='litem'></view>
    <view class='sitem'></view>
</view>
<view class='clm-bottom'>
    <view class='hitem'></view>
     <view class='clms'> 
        <view class='litem'></view>
        <view class='litem'></view>
     </view> 
</view>