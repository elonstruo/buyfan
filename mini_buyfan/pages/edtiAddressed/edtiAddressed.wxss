/* pages/edtiAddress/edtiAddress.wxss */
page{
	background-color: #f4f4f4;
}
.input-box {
	height: 100rpx;
	display: flex;
	align-items: center;
	border-bottom: 1rpx solid #DCDCDC;
	font-size: 30rpx;
}
.input-box:last-child {
	border-color: transparent;
}
.title {
	width: 120rpx;
	margin-right: 20rpx;
	color: #323232;
	font-size: 30rpx;
}
.name {
	width: 100%;height: 100rpx;
	line-height: 100rpx;
}
.address-info {
	width: 100%;
	box-sizing: border-box;
	padding: 20rpx 0;
	font-size: 28rpx;
	height: 120rpx;
	white-space: normal;
}
.label, .address-info-hover {
	font-size: 28rpx;
	color: #AAAAAA;
}
.address-form {
	padding: 0 30rpx;
	background-color: #fff;
}
.right-arrow {
	width: 18rpx;
	height: 30rpx;
	margin-left: 15rpx;
}
.name, .section {
	width: 460rpx;
	height: 100rpx;
	display: flex;
	align-items: center; 
}
.name {
	justify-content: space-between;
}
.section {
	justify-content: flex-end
}
.locaiton-box {
	justify-content: space-between
}
.addressButton {
    width: 640rpx;
    height: 80rpx;
    line-height: 80rpx;
	margin: 40rpx auto;
	color: #fff;
	text-align: center;
    background: rgba(251, 135, 60, 1);
    border-radius: 50rpx;
	font-size: 30rpx; 
}