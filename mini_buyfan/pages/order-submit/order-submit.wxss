/* pages/order-submit/order-submit.wxss */

page {
    background-color: #f4f4f4;
    padding-bottom: 110rpx;
}

.wrapper {
    padding: 20rpx;
    font-size: 30rpx;
}

.store {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 90rpx;
    padding: 0 20rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
}

.store-takeOut .right {
    display: flex;
    align-items: center;
}

.store .left {
    display: flex;
}

.icon-store {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.icon-arrow {
    width: 18rpx;
    height: 30rpx;
    margin-left: 13rpx;
}

.dine-in {
    padding: 0 20rpx;
    margin-bottom: 20rpx;
    background: #fff;
}

.dine-in .top {
    display: flex;
    height: 100rpx;
    align-items: center;
    border-bottom: 1rpx solid #dcdcdc;
}

.dine-in .radio:first-child {
    margin-right: 140rpx;
    margin-left: 75rpx;
}

.dine-in radio .wx-checkbox-input {
    border-radius: 50%;
}

.tisu checkbox .wx-checkbox-input, .dine-in checkbox .wx-checkbox-input {
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
    border: 1rpx solid rgba(204, 204, 204, 1);
}

.tisu checkbox .wx-checkbox-input.wx-checkbox-input-checked, 
.dine-in radio .wx-radio-input.wx-radio-input-checked {
    background: #fb873d;
    border-color: #fb873d;
    color: #fff;
}

.dine-in radio .wx-radio-input {
	width: 30rpx;
	height: 30rpx;
    border-radius: 50%; /* 圆角 */
}

.tisu checkbox .wx-checkbox-input.wx-checkbox-input-checked::before,
.dine-in radio .wx-radio-input.wx-radio-input-checked::before {
    width: 30rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
    height: 30rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
    line-height: 30rpx;
    font-size: 22rpx; /* 对勾大小 30rpx */
    text-align: center;
    color: #fff; /* 对勾颜色 白色 */
    background: transparent;
    transform: translate(-50%, -50%) scale(1);
    -webkit-transform: translate(-50%, -50%) scale(1);
}


.dine-in .bottom {
    display: flex;
    align-items: center;
    height: 90rpx;
    padding-left: 75rpx;
    background-color: #fff;
}

.desk {
    width: 80rpx;
    height: 48rpx;
    margin: 0 20rpx;
	text-align: center;
    border: 1rpx solid rgba(204, 204, 204, 1);
}

.icon-order {
    width: 40rpx;
    height: 40rpx;
    margin-right: 27rpx;
}

.order-list {
}

.order-list .title {
    display: flex;
    padding: 0 27rpx;
    align-items: center;
    height: 90rpx;
    background-color: #fff;
}

.goods {
    width: 110rpx;
    height: 110rpx;
    margin-right: 20rpx;
}

.items .item {
    padding: 20rpx;
}

.items .item, .item .info .top {
    display: flex;
    justify-content: space-between;
}

.item .info {
    width: 560rpx;
}

.item .info .top {
    margin-bottom: 35rpx;
}

.item .info .bottom {
    font-size: 20rpx;
    color: #999;
}

.item .info .bottom .num {
    font-size: 28rpx;
}

.tips {
	box-sizing: border-box;
    height: 90rpx;
    display: flex;
    align-items: center;
    padding: 20rpx;
    background-color: #fff;
}

.tips-title {
    width: 560rpx;
}

.tips text {
    margin-right: 50rpx;
}

.addall {
    margin-bottom: 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: right;
    padding: 0 62rpx;
    background-color: #fff;
}

.addall text {
    color: #cc6061;
    font-size: 24rpx;
    font-weight: bold;
}

.tisu {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 90rpx;
    background-color: #fff;
    padding: 0 20rpx;
}

.addaddress {
	display: flex;
	align-items: center;
	justify-content: center;
    width: 400rpx;
    height: 80rpx;
	margin: 30rpx auto;
    border: 2rpx solid rgba(251, 135, 60, 1);
    border-radius: 50rpx;
	color: #FB873C;
}
/* .addaddress-hover {
	color: #fff;
	background-color: #FB873C;
} */
.icon-add {
	width: 32rpx;
	height: 32rpx;
	margin-right: 18rpx;
}
.take-out .top {
	height: auto;
}
.take-out .bottom {
	padding: 0;
	justify-content: space-between;
}
.icon-now {
	width: 40rpx;
	height: 40rpx;
	margin-right: 20rpx;
}
.take-out .bottom .left {
	display: flex;
	align-items: center;
}
.outPrice {
	box-sizing: border-box;
    height: 90rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 20rpx;
	background-color: #fff;
}
.take-out .address-box {
	height: 140rpx;
	box-sizing: border-box;
	/* font-size: 24rpx; */
}
.take-out .address-bottom {
	font-size: 30rpx;
	margin-top: 14rpx;
	font-weight: bold;
}