/* pages/appraise/appraise.wxss */

page {
    background-color: #f4f4f4;
}

.title {
	margin: 20rpx 0;
	padding: 0 30rpx;
    height: 90rpx;
    line-height: 90rpx;
    background: rgba(255, 255, 255, 1);
	font-size: 28rpx;
	color: #323232;
}
.appraise-box {
	padding-bottom: 80rpx;
	overflow: hidden;
	background-color: #fff;
}
.appraise-text {
	width: 100%;
	height: 218rpx;
	box-sizing: border-box;
	padding: 30rpx;
	font-size: 30rpx;
}
.appraise-text-hover {
	font-size: 28rpx;
	color: #AAAAAA;
}

.img-list{
	overflow: hidden;
}
.add-item {
	display: flex;
	align-items: center;
	justify-content: center;
	border: 1px dashed #bfbfbf;
	box-sizing: border-box;
	width: 162rpx;
	height: 162rpx;
	margin-left: 20rpx;
	font-size: 20rpx;
	color: #aaa;
	text-align: center;
}
.img-box {
	display: flex;
}
.img-item {
	margin-left: 20rpx;
}
.img-item image {
	max-width: 100%;
}
.icon-add {
	width: 56rpx;
	height: 56rpx;
}
.img-item image {
	width: 162rpx;
	height: 162rpx;
}

.addressButton {
    width: 640rpx;
    height: 80rpx;
    line-height: 80rpx;
	margin: 40rpx auto;
	color: #fff;
	text-align: center;
    background: rgba(251, 135, 60, 1);
    border-radius: 50rpx;
	font-size: 30rpx; 
}